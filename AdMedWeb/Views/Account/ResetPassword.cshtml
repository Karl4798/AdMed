@model AdMedWeb.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<h2>@ViewData["Title"]</h2>
<h4>Reset your password.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Username" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputLastName1">Username</label>
                <label type="text" class="form-control">@Model.Username</label>
            </div>
            <div class="form-group">
                <label asp-for="ExistingPassword"></label>
                <input asp-for="ExistingPassword" class="form-control" />
                <span asp-validation-for="ExistingPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <a href="/Account/Upsert/" class="btn btn-primary" style="text-align: center; width: 45%; float: left;">Return to Details</a>
            <button type="submit" class="btn btn-danger" style="text-align: center; width: 45%; float: right;">Reset</button>
        </form>
    </div>
</div>